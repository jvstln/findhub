# FindHub Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/findhub"

# Authentication
BETTER_AUTH_SECRET="your-secret-key-here-minimum-32-characters"
BETTER_AUTH_URL="http://localhost:3001"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Server Configuration
PORT="3000"
CORS_ORIGIN="http://localhost:3001,http://localhost:3002"

# File Upload (Supabase - Optional)
SUPABASE_URL="your-supabase-project-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"

# Admin App Configuration
NEXT_PUBLIC_ADMIN_MODE="true"

# PWA Configuration (Web App - Optional)
NEXT_PUBLIC_PWA_ENABLED="true"

# Security Questions Encryption
# Generate with: bun run scripts/generate-encryption-key.ts
ENCRYPTION_KEY="your-64-character-hex-encryption-key-here"