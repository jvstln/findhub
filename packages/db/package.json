{
	"name": "@findhub/db",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./types/*": {
			"types": "./dist/types/*.type.d.ts",
			"default": "./src/types/*.type.ts"
		},
		"./schemas/*": {
			"types": "./dist/schema/*.d.ts",
			"default": "./src/schema/*.ts"
		},
		"./drizzle-orm": {
			"types": "./dist/drizzle-orm.d.ts",
			"default": "./src/drizzle-orm.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"seed:categories": "bun run src/seeds/run-seed.ts categories",
		"seed:all": "bun run src/seeds/run-seed.ts all",
		"seed:check": "bun run src/seeds/check-seeds.ts",
		"seed": "bun run src/seeds/run-seed.ts"
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.2",
		"@types/pg": "^8.11.11",
		"tsdown": "catalog:"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"drizzle-orm": "catalog:",
		"pg": "^8.14.1",
		"postgres": "^3.4.7",
		"zod": "catalog:"
	}
}
